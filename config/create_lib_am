#! /usr/bin/env bash
################################################################################
# Copyright (c) 2012 Los Alamos National Security, LLC
# All rights reserved.
################################################################################

# OS X sucks!
find_exec="find" && [ `uname -o` == "Darwin" ] && find_exec="find -E"
src_str=".*\.\(c*\|f90\)" && [ `uname -o` == "Darwin" ] && \
	src_str=".*\.(c*|f90)"

echo "################################################################################"
echo "# HashMark library Makefile.am"
echo "# THIS FILE WAS GENERATED BY config/bootstrap DO NOT EDIT"
echo "################################################################################"
echo

################################################################################
# General settings
################################################################################

echo "#------------------------------------------------------------------------------#"
echo "# General Settings"
echo "#------------------------------------------------------------------------------#"
echo
echo "lib_LTLIBRARIES = libhm.la"
echo
echo "INCLUDES = -I\${top_srcdir}/src"
echo
echo "libhm_includedir = \${includedir}"
echo
echo "AM_CPPFLAGS = @EXTRA_CPPFLAGS@"

echo
echo "#------------------------------------------------------------------------------#"
echo "# Headers"
echo "#------------------------------------------------------------------------------#"
echo
echo "libhm_include_HEADERS = \\"

numfiles=`$find_exec src -type f -regex '.*\.h' | wc -l`
cnt=1
for file in `$find_exec src -type f -regex '.*\.h'` ; do
	if [ $cnt == $numfiles ] ; then
		echo "	\${top_srcdir}/$file"
	else
		echo "	\${top_srcdir}/$file \\"
	fi
	let cnt=$cnt+1
done

echo
echo "#------------------------------------------------------------------------------#"
echo "# Sources"
echo "#------------------------------------------------------------------------------#"
echo
echo "libhm_la_SOURCES = \\"

numfiles=`$find_exec src -type f -regex $src_str | wc -l`
cnt=1
for file in `$find_exec src -type f -regex $src_str | sort` ; do
	if [ $cnt == $numfiles ] ; then
		echo "	\${top_srcdir}/$file"
	else
		echo "	\${top_srcdir}/$file \\"
	fi
	let cnt=$cnt+1
done

echo
echo "libhm_la_LDFLAGS = @VERSION_INFORMATION@"
